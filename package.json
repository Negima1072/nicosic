{
    "name": "nicosic",
    "version": "0.0.1",
    "description": "",
    "main": "dist/main.js",
    "scripts": {
        "dev": "rimraf dist && run-p dev:*",
        "dev:tsc": "tsc -w -p tsconfig.node.json",
        "dev:webpack": "cross-env NODE_ENV=\"development\" webpack --progress",
        "dev:electron": "wait-on ./dist/index.html ./dist/main.js && cross-env NODE_ENV=\"development\" electron .",
        "build": "rimraf dist && cross-env NODE_ENV=\"production\" webpack --progress",
        "start": "cross-env NODE_ENV=\"production\" electron .",
        "package:win": "electron-builder --win --x64",
        "package:mac": "electron-builder --mac --x64"
    },
    "author": "Negima1072",
    "license": "MIT",
    "build": {
        "appId": "io.github.nicosic",
        "productName": "nicosic",
        "directories": {
            "output": "dist"
        },
        "files": [
            "dist/**/*"
        ],
        "extends": null,
        "mac": {
            "target": "dmg"
        },
        "win": {
            "target": "nsis"
        }
    },
    "devDependencies": {
        "@types/cookie-parser": "^1.4.6",
        "@types/express": "^4.17.21",
        "@types/node": "^20.11.20",
        "@types/react": "^18.2.58",
        "@types/react-dom": "^18.2.19",
        "cookie-parser": "^1.4.6",
        "cross-env": "^7.0.3",
        "css-loader": "^6.10.0",
        "electron": "^29.0.1",
        "electron-builder": "^24.12.0",
        "electron-reload": "^2.0.0-alpha.1",
        "express": "^4.18.2",
        "html-webpack-plugin": "^5.6.0",
        "mini-css-extract-plugin": "^2.8.0",
        "npm-run-all": "^4.1.5",
        "rimraf": "^5.0.5",
        "ts-loader": "^9.5.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3",
        "wait-on": "^7.2.0",
        "webpack": "^5.90.3",
        "webpack-cli": "^5.1.4"
    },
    "dependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    }
}
